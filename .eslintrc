{
  "extends": [
    "standard-flow",
    "standard",
    "standard-react"
  ],
  "parser": "babel-eslint",

  "ecmaFeatures": {
    "jsx": true
  },

  "env": {
    "es6": true,
    "jasmine": true
  },

  "plugins": [
    "react",
    "flowtype"
  ],

    "rules": {
      "flowtype/require-return-type": [2, "always",{"excludeArrowFunctions": true}],
      "no-console": 2,
      "consistent-return": 2,
      "no-mixed-operators": 0,
      "max-len": ["warn", 1000],
      "standard/computed-property-even-spacing": 0
    },

  // Map from global var to bool specifying if it can be redefined
  "globals": {
    "ErrorUtils" : false,
    "getRenderOutputForJSX" : false,
    "renderComponent" : false,
    "reactElementToJSXString" : false,
    "getInstance" : false,
    "getRenderOutput" : false,
    "getRenderOutputJSX" : false,
    "TestDataRepository" : false,
    "TestState" : false,
    "ReactTestUtils" : false,
    "React" : true,
    "__DEV__": true,
    "__dirname": false,
    "__fbBatchedBridgeConfig": false,
    "cancelAnimationFrame": false,
    "clearImmediate": true,
    "clearInterval": false,
    "clearTimeout": false,
    "console": false,
    "document": false,
    "escape": false,
    "exports": false,
    "fetch": false,
    "global": false,
    "jest": false,
    "Map": true,
    "module": false,
    "navigator": false,
    "process": false,
    "Promise": true,
    "requestAnimationFrame": true,
    "require": false,
    "Set": true,
    "setImmediate": true,
    "setInterval": false,
    "setTimeout": false,
    "window": false,
    "XMLHttpRequest": false,
    "pit": false
  }
}
